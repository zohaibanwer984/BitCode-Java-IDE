<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">
<!--
	Dark theme based off of VS Code's Dark Theme
	See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->
<RSyntaxTheme version="1.0">
<!-- Omitting baseFont will use a system-appropriate monospaced. -->

<!--  General editor colors. -->
<background color="1E1E1E" />
<caret color="FFFFFF" />
<selection useFG="false" bg="3399ff" roundedEdges="false" />
<currentLineHighlight color="2F2F2F" fade="false" />
<marginLine fg="37474F" />
<markAllHighlight color="3399ff" />
<markOccurrencesHighlight color="3399ff" border="false" />
<matchedBracket fg="FFFFFF" bg="3399ff" highlightBoth="false" animate="true" />
<hyperlinks fg="3399ff" />
<secondaryLanguages>
	<language index="1" bg="2F2F2F" />
	<language index="2" bg="2F2F2F" />
	<language index="3" bg="2F2F2F" />
</secondaryLanguages>

<!-- Gutter styling. -->
<gutterBorder color="37474F" />
<lineNumbers fg="37474F" currentFG="3399ff"/>
<foldIndicator fg="FFFFFF" armedFg="3399ff" iconBg="2F2F2F" iconArmedBg="3F3F3F" />
<iconRowHeader activeLineRange="3399ff" />

<!-- Syntax tokens. -->
<tokenStyles>
        <style token="IDENTIFIER" fg="FFFFFF"/>
        <style token="RESERVED_WORD" fg="C586C0" bold="false"/>
        <style token="RESERVED_WORD_2" fg="C586C0" bold="false"/>
        <style token="ANNOTATION" fg="FFFFFF"/>
        <style token="COMMENT_DOCUMENTATION" fg="878787"/>
        <style token="COMMENT_EOL" fg="878787"/>
        <style token="COMMENT_MULTILINE" fg="878787"/>
        <style token="COMMENT_KEYWORD" fg="878787"/>
        <style token="COMMENT_MARKUP" fg="878787"/>
        <style token="FUNCTION" fg="FFFFFF"/>
        <style token="DATA_TYPE" fg="FFFFFF" bold="true"/>
        <style token="LITERAL_BOOLEAN" fg="FFFFFF" bold="true"/>
        <style token="LITERAL_NUMBER_DECIMAL_INT" fg="FFFFFF"/>
        <style token="LITERAL_NUMBER_FLOAT" fg="FFFFFF"/>
        <style token="LITERAL_NUMBER_HEXADECIMAL" fg="FFFFFF"/>
        <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="FFFFFF"/>
        <style token="LITERAL_CHAR" fg="FFFFFF"/>
        <style token="LITERAL_BACKQUOTE" fg="FFFFFF"/>
		<style token="MARKUP_TAG_DELIMITER" fg="C586C0"/>
        <style token="MARKUP_TAG_NAME" fg="C586C0" bold="true"/>
        <style token="MARKUP_TAG_ATTRIBUTE" fg="C586C0"/>
        <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="FFFFFF"/>
        <style token="MARKUP_COMMENT" fg="878787"/>
        <style token="MARKUP_DTD" fg="878787"/>
        <style token="MARKUP_PROCESSING_INSTRUCTION" fg="878787"/>
        <style token="MARKUP_CDATA" fg="878787"/>
        <style token="MARKUP_CDATA_DELIMITER" fg="878787"/>
        <style token="MARKUP_ENTITY_REFERENCE" fg="878787"/>
        <style token="OPERATOR" fg="FFFFFF"/>
        <style token="PREPROCESSOR" fg="878787"/>
        <style token="REGEX" fg="FFFFFF"/>
        <style token="SEPARATOR" fg="FFFFFF"/>
        <style token="VARIABLE" fg="FFFFFF" bold="false"/>
        <style token="WHITESPACE" fg="FFFFFF"/>
        <style token="ERROR_IDENTIFIER" fg="FFFFFF" bg="d82323"/>
        <style token="ERROR_NUMBER_FORMAT" fg="FFFFFF" bg="d82323"/>
        <style token="ERROR_STRING_DOUBLE" fg="FFFFFF" bg="d82323"/>
        <style token="ERROR_CHAR" fg="FFFFFF" bg="d82323"/>
</tokenStyles>

</RSyntaxTheme>
